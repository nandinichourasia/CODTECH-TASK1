    <div class="todocontainer">
        <h1 style="text-shadow: 2px 2px 0 #efe8e8, -2px -2px 0 #ece9e9, 2px -2px 0 #ede6e6, -2px 2px 0 #ebe5e5;">
            To-do-list</h1>


        <input type="text" id="newTask" placeholder="Add a new task"
            style="width: 300px; height: 30px; font-size: 16px;">
        <button id="addTask" style="width: 80px; height: 32px; font-size: 14px;">Add Task</button>
        <ul id="taskList"></ul>
    </div>
    <script src="todo.js"></script>
    <script>
        document.getElementById('newTask').addEventListener('keydown', function (event) {
            if (event.key === 'Enter') {
                event.preventDefault(); // Prevent default form submission behavior
                document.getElementById('addTask').click();
            }
        });

        document.getElementById('addTask').addEventListener('click', function (event) {
            event.preventDefault(); // Prevent default form submission behavior
            addTask(); // Your function to add the task
        });

        function addTask() {
            const taskValue = document.getElementById('newTask').value;
            if (taskValue.trim() !== "") {
                alert('Task added: ' + taskValue); // Replace this with actual task-adding functionality
                document.getElementById('newTask').value = ""; // Clear the input field after adding task
            }
        }
    </script>
